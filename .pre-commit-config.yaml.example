# Example .pre-commit-config.yaml
# This shows how to use the forbid-vars hook in your project

repos:
  # This repository's hooks
  - repo: https://github.com/YOUR_USERNAME/pre-commit-extra-hooks
    rev: v1.0.0 # Use the latest version tag
    hooks:
      # Basic usage with default settings (forbids 'data' and 'result')
      - id: forbid-vars

      # OR: Custom forbidden names
      # - id: forbid-vars
      #   args: ['--names=data,result,info,temp,obj,value']

  # Standard pre-commit hooks (recommended)
  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v4.5.0
    hooks:
      - id: trailing-whitespace
      - id: end-of-file-fixer
      - id: check-yaml
      - id: check-added-large-files
      - id: check-ast

  # Python linting with ruff (recommended)
  - repo: https://github.com/astral-sh/ruff-pre-commit
    rev: v0.1.8
    hooks:
      - id: ruff
        args: [--fix]
      - id: ruff-format

  # Prettier for YAML and Markdown (recommended)
  - repo: https://github.com/pre-commit/mirrors-prettier
    rev: v3.1.0
    hooks:
      - id: prettier
        types_or: [yaml, markdown]
